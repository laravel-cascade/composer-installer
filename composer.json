{
    "name": "laravel-cascade/cascade-composer-installer",
    "type": "composer-plugin",
    "description": "Composer Plugin built for Cascade System to help easily install Module, Themes and Plugins to their dedicated directories",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "LaravelCascade\\ComposerInstaller\\": "src/"
        }
    },
    "extra": {
        "class": "LaravelCascade\\ComposerInstaller\\ComposerPlugin"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "~8.0 || ~9.0"
    },
    "require": {
        "composer-plugin-api": "^2.0",
        "php": "7.* || 8.*"
    }
}